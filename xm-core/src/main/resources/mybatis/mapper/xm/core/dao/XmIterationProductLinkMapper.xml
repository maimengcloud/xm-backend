	<sql id="set">
		ctime = #{ctime},
		cuserid = #{cuserid},
		cusername = #{cusername},
		link_status = #{linkStatus}
	</sql>
	<sql id="someFieldSet">
		<if test="ctime != null"> ctime = #{ctime},     </if>
		<if test="cuserid != null and cuserid != ''"> cuserid = #{cuserid},     </if>
